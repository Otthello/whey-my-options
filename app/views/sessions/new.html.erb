<div class="login-content">
  <div class="errors">
    <% if @errors %>
    <% @errors.each do |error| %>
      <center><%= error %></center>
      <% end %>
    <% end %>
  </div>
  <div class="login-register">
    <form id="login-register-form">
      <div class="ui-field-contain">
        <center><label for="fullname">Username:</label></center>
        <input type="text" name="user[username]" id="fullname">

        <center><label for="email-field">Email:</label></center>
        <input type="text" name="user[email]" id="email-field">

        <center><label for="pass-field">Password:</label></center>
        <input type="password" name="user[password]" id="pass-field">

        <input type="submit" value="Login" id="login-submit">
        <input type="submit" value="Register" id="register-submit">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>